          <img src="https://cdndailyexcelsior.b-cdn.net/wp-content/uploads/2021/01/SDRF.jpg" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5>NDRF</h5>
            <p>National Disaster Response Force</p>
              <a href="https://ndrf.gov.in" target="_blank" class="btn btn-primary">Visit NDRF</a>
          </div>
        </div>
        <div class="carousel-item">
          <img src="https://www.ndrf.gov.in/sites/default/files/Mixed%20Slider%2011092023.jpg" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5>SDRF</h5>
            <p>State Disaster Response Force</p>
            <a href="https://ndrf.gov.in" target="_blank" class="btn btn-primary">Visit SDRF</a>
          </div>
        </div>
        <div class="carousel-item">
          <img src="https://www.rajyasameeksha.com/Uploads/7e04a6a1-641b-4339-a515-3dc18cc43d71.jpg" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

















    <div class="container mt-3">
      <div class="row">
        <% blogs.forEach(blog => { %>
          <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3 mb-4">
            <div class="card" style="width: 100%;">
              <img src="<%= blog.coverImageURL %>" class="card-img-top img-fluid" alt="..." />
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
               
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/script') %>

   
  </body>
</html>
